@model mvcadmin10.Models.vmUINVP003_InvStatus

@{
    ViewData["Title"] = SessionService.PrgName;
    Layout = "_LayoutAdmin";
    var DetailPageTabList = new List<dmDetailTabsModel>();
    DetailPageTabList.Add(new dmDetailTabsModel { TabIndex = 1, TabName = "明細資料" });
    DetailPageTabList.Add(new dmDetailTabsModel { TabIndex = 2, TabName = "統計圖表" });
}

<div class="row mb-0">
    <div class="col-md-12">
        <div class="float-start me-1">@await Html.PartialAsync("_PartialFormMasterButton")</div>
        <div class="float-start me-1">@await Html.PartialAsync("_PartialFormMasterNavigator")</div>
    </div>
</div>
<hr />
<div class="card border-secondary mb-0">
    <div class="card-body bg-secondary text-white bg-opacity-50 pt-2">
        <div class="row">
            <div class="col-md-8">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InvMastersModel.ProductNo)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InvMastersModel.ProductNo)
                </span>
            </div>
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InvMastersModel.Qty)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InvMastersModel.Qty)
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InvMastersModel.ProductName)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InvMastersModel.ProductName)
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InvMastersModel.Remark)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InvMastersModel.Remark)
                </span>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    @if (SessionService.DetailPageTabIndex == 1)
    {
        @await Html.PartialAsync("_PartialUINVP003Detail", Model)
    }
    @if (SessionService.DetailPageTabIndex == 2)
    {
        @await Html.PartialAsync("_PartialUINVP003Chart")
    }
</div>
<hr />
@await Html.PartialAsync("_PartialFormDetailPageTab", DetailPageTabList)