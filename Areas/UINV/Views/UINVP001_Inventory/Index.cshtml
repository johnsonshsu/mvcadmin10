@model mvcadmin10.Models.vmUINVP001_Inventory

@{
    ViewData["Title"] = SessionService.PrgName;
    Layout = "_LayoutAdmin";
    var DetailPageTabList = new List<dmDetailTabsModel>();
    DetailPageTabList.Add(new dmDetailTabsModel { TabIndex = 1, TabName = "明細資料" });
    DetailPageTabList.Add(new dmDetailTabsModel { TabIndex = 2, TabName = "統計圖表" });
    string textColor = "text-dark fw-bold";
    if (Model.InventoryModel.IsCancel)
        textColor = "text-danger fw-bold";
    else if (Model.InventoryModel.IsConfirm)
        textColor = "text-success fw-bold";
    else
        textColor = "text-dark fw-bold";

}
<div class="row mb-0">
    <div class="col-md-12">
        <div class="float-start me-1">@await Html.PartialAsync("_PartialFormMasterNavigator")</div>
        <div class="float-start me-1">@await Html.PartialAsync("_PartialFormMasterButton")</div>
        <div class="float-start me-1 my-2">@await Html.PartialAsync("_PartialFormMasterPageinfo")</div>
    </div>
</div>
<hr />
<div class="card border-secondary mb-0">
    <div class="card-body bg-secondary text-white bg-opacity-50 pt-2">
        <div class="row">
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.SheetNo)：
                </span>
                <span class="@textColor">
                    @Html.DisplayFor(m => m.InventoryModel.SheetNo)
                </span>
                <a href="javascript:void(0);" class="@textColor" data-bs-toggle="tooltip" data-bs-placement="top"
                    title="@Model.InventoryModel.StatusName">
                    <i class="@Model.InventoryModel.StatusIcon ms-1"></i>
                </a>
                @if (SessionService.IsFormLocked)
                {
                    @await Html.PartialAsync("_PartialFormLockedIcon")
                }
            </div>
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.SheetDate)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.SheetDate)
                </span>
            </div>
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.StatusName)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.StatusName)
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.CodeName)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.CodeName)
                </span>
            </div>
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.WarehouseName)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.WarehouseNo)
                    @Html.DisplayFor(m => m.InventoryModel.WarehouseName)
                </span>
            </div>
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.HandleName)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.HandleNo)
                    @Html.DisplayFor(m => m.InventoryModel.HandleName)
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.TargetName)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.TargetNo)
                    @Html.DisplayFor(m => m.InventoryModel.TargetName)
                </span>
            </div>
            <div class="col-md-8">
                <span class="text-dark fw-bold">
                    @Html.DisplayNameFor(m => m.InventoryModel.Remark)：
                </span>
                <span class="text-dark">
                    @Html.DisplayFor(m => m.InventoryModel.Remark)
                </span>
            </div>
        </div>
    </div>
</div>